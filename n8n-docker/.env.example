# Ejemplo de archivo .env para n8n (no contiene secretos reales)

# ===== DATABASE CONFIGURATION (para n8n) =====
# PostgreSQL local (diferente BD de Api-Rest)
DB_HOST=postgres
DB_PORT=5432
DB_NAME=n8n
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# ===== n8n CONFIGURATION =====
# Host and Port
N8N_HOST=localhost
N8N_PORT=5678
N8N_PROTOCOL=http

# Timezone
GENERIC_TIMEZONE=America/Argentina/Buenos_Aires

# Credentials (cambiar en producción!)
N8N_DEFAULT_USER_EMAIL=admin@example.com
N8N_DEFAULT_USER_PASSWORD=changeme

# ===== EXTERNAL SERVICES (integración con Payment Service) =====
PAYMENT_SERVICE_URL=http://host.docker.internal:3002
API_REST_URL=http://host.docker.internal:3000
WEBSOCKET_URL=http://host.docker.internal:8081

# ===== WEBHOOKS =====
# URL de n8n para recibir webhooks (desde Payment Service)
WEBHOOK_URL=http://localhost:5678/

# ===== JWT & SECURITY =====
# Shared JWT Secret con otros servicios
JWT_SECRET=replace_with_a_random_secret

# WebSocket Secret
WEBSOCKET_SECRET=replace_with_a_random_secret

# ===== LOGGING =====
LOG_LEVEL=info
NODE_ENV=production
