# ===========================================
# AI Orchestrator - Variables de Entorno
# ===========================================

# Puerto del servicio
PORT=3003

# URL del Frontend (para CORS)
FRONTEND_URL=http://localhost:7171

# ===========================================
# LLM Provider Configuration
# ===========================================

# Proveedor por defecto: 'gemini', 'grok', 'openai' o 'groq'
DEFAULT_LLM_PROVIDER=groq

# ===========================================
# Groq API (GRATIS - Recomendado para desarrollo)
# ===========================================
# Obtén tu API Key en: https://console.groq.com/keys
GROQ_API_KEY=tu_groq_api_key_aqui
GROQ_MODEL=llama-3.3-70b-versatile

# ===========================================
# Google Gemini API
# ===========================================
# Obtén tu API Key en: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=tu_gemini_api_key_aqui
GEMINI_MODEL=gemini-2.0-flash

# ===========================================
# xAI Grok API
# ===========================================
# Obtén tu API Key en: https://console.x.ai/
GROK_API_KEY=tu_grok_api_key_aqui
GROK_MODEL=grok-2-latest

# ===========================================
# OpenAI API
# ===========================================
# Obtén tu API Key en: https://platform.openai.com/api-keys
OPENAI_API_KEY=tu_openai_api_key_aqui
OPENAI_MODEL=gpt-4o-mini

# ===========================================
# Servicios Externos
# ===========================================

# URL del API Rest (NestJS)
API_REST_URL=http://localhost:3000

# URL del servidor WebSocket (Go)
WEBSOCKET_URL=http://localhost:8080
